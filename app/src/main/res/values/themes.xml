<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="Theme.AppShopOnline" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_button</item> <!--Color para los botones-->
        <item name="colorPrimaryVariant">@color/app_font</item> <!--Color para la fuente del boton primary-->
        <item name="colorOnPrimary">@color/app_font_button</item> <!--Color para la fuente cuando el primario esta seleccionado-->
        <item name="colorPrimaryDark">@color/app_font</item>

        <item name="colorSurface">@color/app_font</item> <!--Color para la fuente de una tarjeta-->
        <item name="colorOnSurface">@color/app_font</item> <!--Color para la fuente-->

        <item name="android:colorBackground">@color/app_background</item> <!--Color para el fondo-->
        <item name="android:colorForeground">@color/app_font</item> <!--Color para el texto de os inputs-->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/spNivel0</item>

        <item name="colorSecondary">@color/app_button</item> <!--Color para botones flotantes, check, radiobutton, etc-->
        <item name="colorSecondaryVariant">@color/app_font</item> <!--Color de letra para el Secundary-->
        <item name="colorOnSecondary">@color/app_font</item> <!--Color de letra cuando el Secundary esta seleccionado-->

        <item name="android:textColor">@color/app_font</item> <!--Color de letra para textos, etc-->

        <item name="colorError">@color/app_error</item>
        <item name="colorOnError">@color/app_error_font</item>
    </style>

    <style name="style_btnLike">
        <item name="android:textColor">@color/app_btn_like</item>
    </style>

    <style name="style_btn">
        <item name="android:textColor">@color/app_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shp_btn_border_carshop</item>
    </style>

    <style name="style_btn_blue">
        <item name="android:textSize">@dimen/spNivel1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="style_btn_header">
        <item name="android:textColor">@color/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_btn_optregister">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/app_button</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/spNivel1</item>
        <item name="android:background">@drawable/shape_button_sky_blue</item>
    </style>

    <style name="style_btn_optregister_white">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/app_font_input</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/spNivel1</item>
        <item name="android:background">@drawable/shape_button_white</item>
    </style>

    <style name="style_inputs">
        <item name="android:layout_marginBottom">@dimen/dpMrgBottomInputs</item>
        <item name="android:textColorHint">@color/app_font_input</item>
        <item name="android:textSize">@dimen/spNivel1</item>
        <item name="android:padding">@dimen/dpPddInput</item>
        <item name="android:background">@drawable/shape_inputs</item>
    </style>

    <style name="style_resumen">
        <item name="android:padding">7dp</item>
    </style>
</resources>
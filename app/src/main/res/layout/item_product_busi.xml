<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:contentPadding="0dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProductoBusi"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtNombreProductoBusi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Nombre del producto"
                    android:textSize="@dimen/spNivel1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrecioxUnidadProductoBusi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$ 1.50 / u"
                    android:textSize="@dimen/spNivel2"
                    android:textStyle="bold"
                    android:textColor="@color/app_button"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnEditarBusi"
                        style="@style/style_btnEditar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@null"
                        app:icon="@drawable/ic_edit"
                        app:iconTint="@color/app_edit"/>
                    <Button
                        android:id="@+id/btnEliminarBusi"
                        style="@style/style_btnEliminar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dpMrgGeneral"
                        app:backgroundTint="@null"
                        app:icon="@drawable/ic_delete"
                        app:iconTint="@color/app_font"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>